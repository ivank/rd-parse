{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es2018",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "lib": ["es2018", "esnext.asynciterable", "dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
